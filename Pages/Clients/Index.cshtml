@page
@model crudAsp.Net_Core.Pages.Clients.IndexModel
@{
}
<div class="container shadow p-5">

    <h1 class="text-center mb-3">CRUD Operations Using .NET Core 6 & Microsoft.EntityFrameworkCore </h1>

    <div class="col mb-3">
        <a class="btn btn-lg btn-primary" href="/Clients/new"><i class="bi bi-file-plus-fill"></i>Add Employee</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Created At</th>
                <th scope="col">Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach(var item in Model.listClients){
            <tr>
                <td width="14%">
                    @item.id
                </td>
                <td width="14%">
                        @item.name
                </td>
                <td width="14%">
                        @item.email
                </td>
                    <td width="14%">
                        @item.phone
                    </td>
                    <td width="14%">
                        @item.address
                    </td>
                <td width="14%">
                        @item.created_at
                </td>
                    
                <td>
                    <div role="group" class="w-60 btn-group">
                        <a class=" btn btn-sm btn-primary" href="/Clients/Edit?id=@item.id"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                        <a  class="btn btn-sm btn-danger" href="/Clients/Delete?id=@item.id"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>